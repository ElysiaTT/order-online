<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 订单头部信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/restaurantNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中华小馆"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/orderIdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="订单号：202310051230001"
                    android:textSize="12sp"
                    android:textColor="#999999" />
            </LinearLayout>

            <TextView
                android:id="@+id/orderStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已完成"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/search_background" />
        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp" />

        <!-- 订单时间和金额 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间："
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/orderTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2023-10-05 12:30"
                android:textSize="14sp"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额："
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/totalAmountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="¥128.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF5722" />
        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/viewDetailButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="查看详情"
                android:textSize="14sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/reorderButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="再次购买"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/chinese_header_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
